<%- include('../partials/header', {title: folder.name + ' - Drive'}) %>

<%- include('../partials/interactive-nav') %>

<div class="drive-wrapper w-full bg-zinc-950 py-8 px-4 md:px-20">

  <nav class="flex mb-20" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <a href="/drive" class="inline-flex items-center text-sm font-medium text-zinc-400 hover:text-yellow-400">
          <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
          </svg>
          Drive
        </a>
      </li>
      
      <%# Loop through parent folders %>
      <% breadcrumbs.forEach(function(crumb) { %>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <a href="/drive/folder/<%= crumb._id %>" class="ms-1 text-sm font-medium text-zinc-400 hover:text-yellow-400 md:ms-2"><%= crumb.name %></a>
          </div>
        </li>
      <% }); %>
      
      <%# Current folder (not a link) %>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="ms-1 text-sm font-medium text-zinc-200 md:ms-2"><%= folder.name %></span>
        </div>
      </li>
    </ol>
  </nav>
  <h1 class="text-2xl font-bold text-zinc-300 mb-8 px-4">
    <%= folder.name %>
  </h1>
  
  <input type="hidden" id="currentFolderId" value="<%= folder._id %>">

  <div class="drive-folders w-full min-h-[80vh] grid grid-cols-8 gap-6">
    <%# Display subfolders %>
    <% folders.forEach(function(subfolder) { %>
      <div class="folder w-20 h-20 flex flex-col items-center gap-2">
        <a href="/drive/folder/<%= subfolder._id %>" class="w-20 h-20 flex flex-col">
          <img src="/images/folders-yellow.svg" alt="" />
        </a>
        <a href="/drive/folder/<%= subfolder._id %>" class="text-[.6vw]">
          <%= subfolder.name %>
        </a>
      </div>
    <% }); %>

    <%# Display files %>
    <% files.forEach(function(file) { %>
      <div class="file w-20 h-20 flex flex-col items-center gap-2">
        <a href="<%= file.url %>" target="_blank" class="w-20 h-20 flex flex-col">
          <%# Display a file icon based on its type %>
          <img src="/images/files/<%= file.filename.split('.').pop() %>.svg" alt="" /> 
        </a>
        <a href="<%= file.url %>" target="_blank" class="text-[.6vw]">
          <%= file.filename %>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<script src="/javascripts/script.js"></script>

<%- include('../partials/footer') %>